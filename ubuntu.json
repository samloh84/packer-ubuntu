{
  "_comment": "Base template. Run by executing packer -var-file=<variable_file> ubuntu.json",
  "builders": [
    {
      "type": "virtualbox-iso",
      "headless": "{{ user `headless` }}",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "iso_target_path": "{{ template_dir }}/{{ user `iso_path` }}/{{ user `iso_name` }}",
      "iso_urls": [
        "{{ template_dir }}/{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "boot_command": "<tab> inst.ks=hd:fd0:/{{ user `preseed` }} <enter><wait>",
      "disk_size": "{{ user `disk_size` }}",
      "floppy_files": [
        "floppy/{{ user `vm_name` }}/{{ user `preseed` }}"
      ],
      "guest_os_type": "{{ user `virtualbox_guest_os_type` }}",
      "ssh_port": "{{ user `ssh_port` }}",
      "output_directory": "output/{{ build_type }}/{{ user `vm_name` }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "vm_name": "{{ user `vm_name` }}",
      "vboxmanage": [
        [
          "modifyvm",
          "{{.Name}}",
          "--memory",
          "{{user `memory`}}"
        ],
        [
          "modifyvm",
          "{{.Name}}",
          "--cpus",
          "{{user `cpus`}}"
        ]
      ],
      "format": "ova"
    },
    {
      "type": "vmware-iso",
      "iso_checksum": "{{ user `iso_checksum` }}",
      "iso_checksum_type": "sha256",
      "iso_target_path": "{{ template_dir }}/{{ user `iso_path` }}/{{ user `iso_name` }}",
      "iso_urls": [
        "{{ template_dir }}/{{ user `iso_path` }}/{{ user `iso_name` }}",
        "{{ user `iso_url` }}"
      ],
      "ssh_username": "{{ user `ssh_username` }}",
      "ssh_password": "{{ user `ssh_password` }}",
      "ssh_timeout": "{{ user `ssh_timeout` }}",
      "boot_command": "<tab> ks=hd:fd0:/{{ user `preseed` }} <enter><wait>",
      "disk_size": "{{ user `disk_size` }}",
      "disk_type_id": "0",
      "floppy_files": [
        "floppy/{{ user `vm_name` }}/{{ user `preseed` }}"
      ],
      "guest_os_type": "{{ user `vmware_guest_os_type` }}",
      "output_directory": "output/{{ build_type }}/{{ user `vm_name` }}",
      "shutdown_command": "{{ user `shutdown_command` }}",
      "vm_name": "{{ user `vm_name` }}",
      "vmdk_name": "{{ user `vm_name` }}",
      "vmx_data": {
        "memsize": "{{ user `memory` }}",
        "numvcpus": "{{ user `cpus` }}"
      },
      "vmx_data_post": {
        "ethernet0.connectionType": "bridged"
      }
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "compression_level": "{{user `compression_level`}}",
      "keep_input_artifact": true,
      "output": "output/{{ user `vm_name` }}.{{ build_type }}.box"
    }
  ],
  "variables": {
    "compression_level": "9",
    "iso_path": "iso",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant",
    "ssh_port": "22",
    "ssh_timeout": "60m",
    "disk_size": "204800",
    "virtualbox_guest_os_type": "RedHat_64",
    "vmware_guest_os_type": "centos-64",
    "memory": "2048",
    "cpus": "2",
    "shutdown_command": "sudo shutdown -h now",
    "preseed": "preseed.cfg",
    "headless": "false"
  }
}
